{
    "version": 1,
    "rules": {
        "indentation": {
            "type": "spaces",
            "size": 4
        },
        "lineLength": {
            "max": 100
        },
        "naming": {
            "classes": "PascalCase",
            "functions": "camelCase",
            "variables": "camelCase",
            "constants": "UPPER_SNAKE_CASE"
        },
        "spacing": {
            "beforeFunctionParen": true,
            "beforeBlock": true,
            "afterComma": true,
            "afterColon": true
        },
        "quotes": {
            "preferred": "double"
        },
        "semicolons": {
            "required": true
        },
        "design": {
            "whitespace": {
                "mandateGenerousWhitespace": true,
                "prioritizeBreathableDesign": true,
                "minimumPadding": "1rem",
                "minimumMargin": "1rem"
            },
            "colorPalette": {
                "strictColorLimitation": true,
                "maxPrimaryColors": 2,
                "maxAccentColors": 1,
                "defaultColors": {
                    "primary": ["#333333", "#F8F8F8", "#FFFFFF"],
                    "accent": ["#5B9BD5"]
                },
                "contrastRequirements": {
                    "minContrastRatio": 4.5,
                    "preferDarkTextOnLight": true
                },
                "prohibitComplexSchemes": true
            },
            "typography": {
                "fontFamily": {
                    "primary": ["Inter", "Roboto", "Open Sans"],
                    "secondary": null
                },
                "hierarchy": {
                    "h1": { "size": "2.5rem", "weight": "bold" },
                    "h2": { "size": "2rem", "weight": "bold" },
                    "h3": { "size": "1.75rem", "weight": "bold" },
                    "body": { "size": "1rem", "weight": "regular" },
                    "caption": { "size": "0.875rem", "weight": "regular" }
                },
                "readability": {
                    "lineHeight": {
                        "body": "1.6",
                        "headings": "1.2"
                    },
                    "letterSpacing": "0.01em"
                }
            },
            "aesthetic": {
                "flatDesign": true,
                "prohibitEffects": ["dropShadow", "3D", "textures", "ornate"],
                "uiComponents": {
                    "simplify": true,
                    "hoverStates": "subtle",
                    "focusStates": "subtle"
                }
            },
            "layout": {
                "gridSystem": "simple",
                "alignment": "logical",
                "consistency": {
                    "spacing": "consistent",
                    "alignment": "consistent",
                    "styling": "consistent"
                }
            }
        }
    }
} 